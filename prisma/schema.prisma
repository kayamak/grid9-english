generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id
  name            String
  type            String
  ownedCircles    Circle[] @relation("CircleOwner")
  memberOfCircles Circle[] @relation("CircleMembers")
}

model Circle {
  id      String @id
  name    String
  ownerId String
  owner   User   @relation("CircleOwner", fields: [ownerId], references: [id])
  members User[] @relation("CircleMembers")
}

model BeVerbWord {
  id        String @id @default(cuid())
  value     String @unique
  label     String
  sortOrder Int
}

model DoVerbWord {
  id              String  @id @default(cuid())
  value           String  @unique
  label           String
  sentencePattern String?
  pastForm        String?
  thirdPersonForm String?
  sortOrder       Int
  adverb          String?

  @@index([sentencePattern])
}

model NounWord {
  id         String @id @default(cuid())
  value      String @unique
  label      String
  numberForm String
  sortOrder  Int

  @@index([numberForm])
}

model AdjectiveWord {
  id        String @id @default(cuid())
  value     String @unique
  label     String
  sortOrder Int
}

model AdverbWord {
  id        String @id @default(cuid())
  value     String @unique
  label     String
  sortOrder Int
}

model SentenceDrill {
  id              String @id @default(cuid())
  sentencePattern String
  english         String
  japanese        String
  sortOrder       Int
}
