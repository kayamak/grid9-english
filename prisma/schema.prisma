// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  name  String
  type  String // "Normal" | "Premium"

  ownedCircles    Circle[] @relation("CircleOwner")
  memberOfCircles Circle[] @relation("CircleMembers")
}

model Circle {
  id      String @id
  name    String
  
  ownerId String
  owner   User   @relation("CircleOwner", fields: [ownerId], references: [id])
  
  members User[] @relation("CircleMembers")
}

model VerbWord {
  id              String  @id @default(cuid())
  value           String  @unique
  label           String
  verbType        String  // "do" | "be"
  sentencePattern String? // "SV" | "SVO" | "SVC" | null (for be verbs)
  pastForm        String?
  thirdPersonForm String?
  sortOrder       Int
  
  @@index([verbType, sentencePattern])
}

model NounWord {
  id         String @id @default(cuid())
  value      String @unique
  label      String
  numberForm String // "none" | "a" | "an" | "plural"
  sortOrder  Int
  
  @@index([numberForm])
}

model AdjectiveWord {
  id        String @id @default(cuid())
  value     String @unique
  label     String
  sortOrder Int
}

model AdverbWord {
  id        String @id @default(cuid())
  value     String @unique
  label     String
  sortOrder Int
}
