// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  name  String
  type  String // "Normal" | "Premium"

  ownedCircles    Circle[] @relation("CircleOwner")
  memberOfCircles Circle[] @relation("CircleMembers")
}

model Circle {
  id      String @id
  name    String
  
  ownerId String
  owner   User   @relation("CircleOwner", fields: [ownerId], references: [id])
  
  members User[] @relation("CircleMembers")
}
